<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:scrollbars="none"
        android:background="@color/white"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/logo"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="72dp" />

            <EditText
                android:id="@+id/etAccount"
                android:maxLength="20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:drawableLeft="@mipmap/icon_user"
                android:drawablePadding="20dp"
                android:drawableStart="@mipmap/icon_user"
                android:gravity="center_vertical"
                android:hint="@string/text_hint_account"
                android:textColorHint="@color/text_hint"
                android:textSize="18dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp" />

            <EditText
                android:id="@+id/etPassword"
                android:maxLength="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/icon_lock"
                android:drawablePadding="20dp"
                android:drawableStart="@mipmap/icon_lock"
                android:gravity="center_vertical"
                android:hint="@string/text_hint_password"
                android:textColorHint="@color/text_hint"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingStart="12dp"
                android:inputType="textPassword"/>

            <com.andexert.library.RippleView
                rv_type="rectangle"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:theme="@style/btn_commit"
                android:text="@string/text_login"
                android:textColor="@color/white"
                android:textSize="18dp" />
            </com.andexert.library.RippleView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRetrieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:textColor="@color/text_hint"
                    android:text="@string/text_forget_password" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

        <!--<TextView-->
