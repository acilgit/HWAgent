<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:padding="12dp"
                    android:src="@mipmap/app_logo" />

                <EditText
                    android:id="@+id/etAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@mipmap/icon_user"
                    android:drawablePadding="20dp"
                    android:drawableStart="@mipmap/icon_user"
                    android:gravity="center_vertical"
                    android:hint="@string/text_hint_account"
                    android:maxLength="11"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    android:inputType="phone"
                    android:textColorHint="@color/text_hint"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@mipmap/icon_lock"
                    android:drawablePadding="20dp"
                    android:drawableStart="@mipmap/icon_lock"
                    android:gravity="center_vertical"
                    android:hint="@string/text_hint_password"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16dp" />

                <com.andexert.library.RippleView style="@style/ripple">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/text_login"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:theme="@style/btn_commit" />
                </com.andexert.library.RippleView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRetrieve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:text="@string/text_forget_password"
                        android:textColor="@color/text_hint" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <!--<TextView-->
